      "source": [
        "import numpy as np"
      ]
    },
    {
      "cell_type": "code",
      "execution_count": 24,
      "metadata": {},
      "outputs": [],
      "source": [
        "n = 12\n",
        "x = np.linspace(0,1,n)\n",
        "X = np.zeros((n,n))\n",
        "for i in range(n):\n",
        "    X[:,i] = x**i"
      ]
    },
    {
      "cell_type": "code",
      "execution_count": 25,
      "metadata": {},
      "outputs": [],
      "source": [
        "A = np.linalg.inv(X) @ np.diag(np.arange(1,n+1)) @ X"
      ]
    },
    {
      "cell_type": "code",
      "execution_count": 26,
      "metadata": {},
      "outputs": [
        {
          "data": {
            "text/plain": [
              "13029357.406073017"
            ]
          },
          "execution_count": 26,
          "metadata": {},
          "output_type": "execute_result"
        }
      ],
      "source": [
        "np.linalg.cond(A)"
      ]
    },
    {
      "cell_type": "code",
      "execution_count": 29,
      "metadata": {},
      "outputs": [
        {
          "name": "stdout",
          "output_type": "stream",
          "text": [
            "[11.99978025 11.00123283  9.99698384  9.00416901  7.9963991   7.00201416\n",
            "  5.99927961  5.0001604   3.99997955  3.00000128  1.99999997  1.        ]\n"
          ]
        }
      ],
      "source": [
        "w, _ = np.linalg.eig(A)\n",
        "print(w)"
      ]
